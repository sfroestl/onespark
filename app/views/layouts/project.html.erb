<html class="no-js" lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
	<title><%= full_title(yield(:title)) %></title>
	
	<meta name="description" content="">

	<meta name="viewport" content="width=device-width">
<!-- 	<link rel="stylesheet" href="style/styleh5bp.css"> -->



	<%= stylesheet_link_tag "project", media: "all" %>
	<%= javascript_include_tag "project" %>
	<%= csrf_meta_tags %>
</head>

<body>
	<div id="all_projects", class="close">
		<%= render :partial => 'shared/projects', :locals => { :projects => current_user.projects } %>
	</div>

	<!-- ///////////////////////////////////ACCOUNT////////////////////////////////////////// -->
	<%= render 'layouts/account' %>

	<!-- ///////////////////////////////////FLASH////////////////////////////////////////// -->
	<div id="flash" class ="flash">
		<% flash.each do |key, value| %>
			<!-- <button class="close_alert" data-dismiss="alert">Ã—</button> -->

			<%= content_tag(:div, value, class: "alert alert-#{key}") %>
		<% end %>
	</div>
	<!-- ///////////////////////////////////SIDEBAR1//////////////////////////////////////////-->
	<div class="sidebar sidebar1" >
		
		<div id="home" class="head">
			<%= image_tag 'img/head-logo.png', alt: "One Spark Logo" %>
		</div>
		
		<div id="projectHead" class="head">
			<h3><%= @project.title %></h3>
		</div>
		

		<div class="scroll-pane jspScrollable tools">
			
			<%= link_to  content_tag('div', 'Settings', class: 'tool settings'), 
					'project_settings_path(@project)',  
					'data-disable-with' => '<div class ="tool active settings ">loading...</div>'
				%>
			
			<%= link_to content_tag('div', 'Overview', class: 'tool overview'), 
					project_path(@project),  
					'data-disable-with' => '<div class ="tool active overview ">loading...</div>' 
				%>
			
			<%= link_to content_tag('div', 'Coworkers', class: 'tool coworkers'), 
					project_coworkers_path(@project),  
					'data-disable-with' => '<div class ="tool active coworkers ">loading...</div>' 
				%>

			<%= link_to content_tag('div', 'Tasks', class: 'tool milestones'), 
					project_tasklists_path(@project),  
					'data-disable-with' => '<div class ="tool active milestones ">loading...</div>' 
					%>
					
			<%= link_to  content_tag('div', 'Dialogs', class: 'tool dialogs'), 
					project_topics_path(@project),  
					'data-disable-with' => '<div class ="tool active dialogs ">loading...</div>'
				%>

			<%= link_to content_tag('div', 'DropBox', class: 'tool files'), 
					project_dropbox_path(@project),  
					'data-disable-with' => '<div class ="tool files active">loading...</div>'
				%>
			
			<% link_to content_tag('div', 'Milestones', class: 'tool milestones'), 
					project_milestones_path(@project),  
					'data-disable-with' => '<div class ="tool active milestones ">loading...</div>' 
				%>	


			<%= link_to  content_tag('div', 'GitHub', class: 'tool milestones'), 
					project_github_path(@project),  
					'data-disable-with' => '<div class ="tool milestones active ">loading...</div>'
				%>




			<%= link_to '' do %>
				<div class="tool documents" >Documents</div>
			<% end%>
			
			<%= link_to '' do %>
				<div class="tool calendar" >Appointments</div>
			<% end%>


			<%= link_to '' do %>
				<div class="tool trash" >Trash</div>
			<% end%>
		</div>
	</div>


	<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->

	<%= yield %>

	<!-- ///////////////////////////////////Debug//////////////////////////////////////////-->
<div class= "debug">
	<% if Rails.env.development? %>
		<%= debug(params) %>
		<%= debug(current_user) if current_user %>
	<% end %>
</div>


</body>
</html>