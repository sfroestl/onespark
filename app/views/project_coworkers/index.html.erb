<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
	<div id = "contentHead" class="head">
		<h3><a href="#add" class="tk-ff-meta-serif-web-pro">All Coworkers</a></h3>
	</div>

	<div class="scroll-pane jspScrollable ">  <!-- scroll-pane jspScrollable -->

		<div class="tool single_content element " id="add">
			<%= render 'form' %>
		</div>

		<div class="seperator">Owner</div>
		<div class="element single_content">
			<div class = "profiles_list">
			  <%= render :partial => 'show_coworker', :locals => { :coworker => @project.user } %>
			</div>
		</div>

		<% unless @project.admins.empty? %>
			<div class="seperator">Admins</div>
			<div class="element single_content">
			  <div class="profiles_list">
		      <%= render :partial => 'show_coworker', :collection => @project.admins, :as => :coworker %>	                 
			  </div>
			</div>
		<% end %>

		<% unless @project.writers.empty? %>
			<div class="seperator">Coworkers with write permission</div>
			<div class="element single_content">
			  <div class="profiles_list">
			    <%= render :partial => 'show_coworker', :collection => @project.writers, :as => :coworker %>	                 
			  </div>
		</div>
		<% end %>

		<% unless @project.readers.empty? %>
			<div class="seperator">Coworkers with read permission</div>
			<div class="element single_content">
				<div class="profiles_list">
				  <%= render :partial => 'show_coworker', :collection => @project.readers, :as => :coworker %>	                 
				  </div>
			</div>
		<% end %>
</div>
