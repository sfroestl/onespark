<%= provide(:title, @tasklist.title) %>

<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
	<div id = "toolHead" class="head">
		<h3>Tasks</h3>
	</div>

 	<div class="scroll-pane jspScrollable tools">
    	<%= render 'sidebar' %>
  	</div>

</div>



<%= link_to 'Edit', edit_project_tasklist_path(@tasklist) %> |
<%= link_to 'Back', project_tasklists_path %>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
	<div id = "contentHead" class="head">

		<h3><a href="" class="tk-ff-meta-serif-web-pro"><%= @tasklist.title %></a></h3>

		<% unless @tasklist.desc.eql? "" %>
		<p class="folder-info">desc: <%= @tasklist.desc %></p>
		<% end %>

		<% unless @tasklist.due_date.nil? %>
		<p class="folder-info">due: <%= format_date_short @tasklist.due_date if @tasklist.due_date %></p>
		<% end %>
		
		<p class="folder-info">created by: <%= @tasklist.creator.username %></p>
		
		<p class="folder-info">
		<%= link_to "Edit", edit_project_tasklist_path(@project, @tasklist) %>
  		<p class="folder-info">
  		<%= link_to "Delete", project_tasklist_path(@project, @tasklist), :confirm => 'Are you sure?', :method => :delete %> </p>
	</div>

	<div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->


	<div class="task tool element" id="add">        
      <%= render "tasks/form" %>
    </div>

		<% unless @tasklist.tasks.uncompleted.empty? %>

			<div class="seperator">
				<%= pluralize(@tasklist.tasks.uncompleted.size, 'open task')%>
			</div>
			<%= render :partial => "shared/task", :collection => @tasklist.tasks.uncompleted %>
		<% end %>

		<% unless @tasklist.tasks.completed.empty? %>
			<div class="seperator">
				<%= pluralize(@tasklist.tasks.completed.size, 'closed task')%>
			</div>
      		<%= render :partial => "shared/task_completed", :collection => @tasklist.tasks.completed, as: :task %>
      	<% end %>
		
	</div>
</div>
