<%= provide(:title, @tasklist.title) %>

<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
	<div id = "toolHead" class="head">
		<h3>Tasks</h3>
	</div>

 	  <div class="scroll-pane jspScrollable tools">
    <%= render 'sidebar' %>
  </div>

</div>



<%= link_to 'Edit', edit_project_tasklist_path(@tasklist) %> |
<%= link_to 'Back', project_tasklists_path %>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
	<div id = "contentHead" class="head">
		<h3><a href="#add" class="tk-ff-meta-serif-web-pro"><%= @tasklist.title %></a></h3>

		due: <%= format_date_short @tasklist.due_date if @tasklist.due_date %>
		desc: <%= @tasklist.desc %>
		created by: <%= @tasklist.creator.username %>

			<%= link_to "Edit", edit_project_tasklist_path(@project, @tasklist) %>
  		<%= link_to "Delete", project_tasklist_path(@project, @tasklist), :confirm => 'Are you sure?', :method => :delete %> 
			<%= link_to 'Complete', edit_project_tasklist_path %>
	</div>

	<div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->


			<div class="task tool" id="add">        
        <%= render "tasks/form" %>
      </div>

		<% if @tasklist.tasks %>
			<%= render :partial => "shared/task", :collection => @tasklist.tasks %>
		<% end %>
		
	</div>
</div>
