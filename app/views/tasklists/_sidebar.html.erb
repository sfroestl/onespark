<% if params[:action].eql? 'new' or params[:action].eql? 'create'  %>
<%= link_to content_tag('div', '+ Add Tasklist', class: 'tool add active'),
	new_project_tasklist_path(@project) %>
<% else %>
<%= link_to content_tag('div', '+ Add Tasklist', class: 'tool add'),
	new_project_tasklist_path(@project) %>
<% end %>
<% if params[:action].eql? 'index' %>
<%= link_to content_tag('div', 'All Tasks', class: 'tool active'),
	project_tasklists_path(@project) %>
<% else %>
<%= link_to content_tag('div', 'All Tasks', class: 'tool'),
	project_tasklists_path(@project) %>
<% end %>

<%= render :partial => 'tasklists/sidebar_tasklist', :collection => @project.tasklists, as: :tasklist %>
