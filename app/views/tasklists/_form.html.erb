<% @tasklist ||= Tasklist.new %>
<%= form_for [@project, @tasklist] do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <fieldset>
    <%= f.label :title,  'Tasklist Name' %>
    <%= f.text_field :title, placeholder:"What needs to be done?", :autofocus => "autofocus" %>
  </fieldset>

  <fieldset>
    <%= f.label :due_date,  'Due Date' %>
    <%= f.text_field :due_date, placeholder:"When is it due?"  %>
  </fieldset>
  
  <fieldset>
    <%= f.label :desc, 'Description' %>
    <%= f.text_area :desc, placeholder: "Wish to add further details?" %>
  </fieldset>

  <fieldset>
    <%= f.label  'Finish' %>
    <%= f.submit :tabindex => 6%>
    <% if params[:action].eql? 'edit' or params[:action].eql? 'update' %>
        <%= link_to 'Cancel', project_tasklist_path(@project, @tasklist), class: "cancelButton" %>
      <% else %>
        <%= link_to 'Cancel', project_tasklists_path(@project), class: "cancelButton" %>
      <% end %>
  <fieldset>
<% end %>
