<div class = "container-fluid">
	<div class="row-fluid">
		<div class="span8 well">
			<div class="pull-right">
			<!-- right menu here -->	
			</div>
			
	      		
				<% unless @git_repos.nil?%>
					<h3>Your repositories hosted on GitHub.com (<%= @git_repos.count %>)</h3>
					<%= link_to 'Back to profile', user_path %>
					<hr/>
					<% @git_repos.each do |repo|%>
						<h5><%= link_to repo["name"], repo_path(repo)  %></h5>
						<%= debug repo["owner"]["login"] if Rails.env.development? %>
						<br/>
						<p>Description: <%= repo["description"] %></p>
						<p>Last commit: <%= repo["updated_at"].to_datetime.strftime('%d.%m.%Y - %H:%M:%S') %></p>
						<p><%= link_to 'View on github.com', repo["html_url"], :target => "_blank"%></p>	
						<hr/>
						<% end %>
				<%end%>
				<%= link_to user_path + "/git/repos/new" do %>
					<i class='icon-plus-sign'></i> Create new repository... 
				<% end %>
				
		</div>
	</div>
</div>