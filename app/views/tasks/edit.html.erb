<%= provide(:title, 'Edit Task') %>

<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
	<div id = "toolHead" class="head">
		<h3>Tasks</h3>
	</div>

	<div class="scroll-pane jspScrollable tools">
		
				<%= link_to new_project_tasklist_path(@project) do %>
					<div class="tool add" >Add Tasklist</div>
				<% end %>

			<%= link_to project_tasklists_path(@project) do %>
				<div class="tool">All Tasks</div>
			<% end %>

			<% @project.tasklists.each do |tasklist| %>
				<%= link_to project_tasklist_path(@project, tasklist) do %>
					<% if tasklist == @tasklist %>
						<div class="tool active"><%= tasklist.title %></div> 
					<% else %>
						<div class="tool"><%= tasklist.title %></div> 
					<% end %>
				<% end %>
			<% end %>
	</div>
</div>

<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
	<div id = "contentHead" class="head">
		<h3><a href="#add" class="tk-ff-meta-serif-web-pro">Edit Task: '<%= @task.title %>'</a></h3>
	</div>

	<div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->

		
		
		<div class="element">
			<%= render 'form' %>
		</div>

		
	</div>
</div>
