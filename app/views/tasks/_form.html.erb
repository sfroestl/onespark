<% if params[:milestone_id] and params[:project_id] %>  
  <%= form_for [@project, @milestone, @task] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %><br />
  <%= f.text_field :title, :autofocus => "autofocus" %>

  <br />
  <%= f.label :desc %><br />
  <%= f.text_area :desc %>

  <br />
  <%= f.label :due_date %><br />
  <%= f.text_field :due_date %>
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>

<% else %>
  <%= form_for [@project, @task] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %><br />
  <%= f.text_field :title, :autofocus => "autofocus" %>

  <br />
  <%= f.label :desc %><br />
  <%= f.text_area :desc %>

  <br />
  <%= f.label :due_date %><br />
  <%= f.text_field :due_date %>
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
<% end %>

  
