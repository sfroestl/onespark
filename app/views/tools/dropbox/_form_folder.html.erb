<%= form_tag({:action => :add_folder}, id: 'db_folder_form' , :onsubmit => "return validateApiForm();") do %>
	<fieldset>
		<%= label_tag :folder_name, 'Add Folder ' %>
		
		<%= text_field_tag :folder_name, nil, :placeholder => 'Enter folder name' %>
	</fieldset>
	<%= hidden_field_tag 'folder_path', params[:folder_path] %>
	<fieldset>
      <%= label_tag  'Finish' %>
      <%= submit_tag 'Create' %>	      
  	  <a class="cancelButton">Cancel</a>
  	</fieldset>

<% end %>