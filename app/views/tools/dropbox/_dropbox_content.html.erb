<div class="task">           
  <h2>Overview</h2>
  <p>You have <%= pluralize(folders.size, 'folder')%></p>
  <p>You have <%= pluralize(files.size, 'files')%></p>
  <ul>
  	<% if files %>
	    <% files.each do |file| %>
	      <li>
          <%= file['path'].split("/").last %>
          <%= link_to 'download', dropbox_download_path(@project)+"?file_path=#{file['path']}", :action => :download %>
          <%= link_to 'delete', dropbox_delete_file_path(@project)+"?file_path=#{file['path']}", :action => :delete_file %>
        </li>
	    <% end %>
    <% end %>
  </ul>
</div>