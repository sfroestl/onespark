<div class="element">           
  <h2>Overview</h2>
  <p><%= pluralize(folders.size, 'folder')%></p>
  <p><%= pluralize(files.size, 'file')%></p>
</div>


<% unless files.empty? %>
  <div class="element">   
    <h2>Files</h2>
    <ul class = "dbfiles">
  	    <% files.each do |file| %>
  	      <li>
            <%= file['path'].split("/").last %> | 
            <%= link_to 'download', dropbox_download_path(@project)+"?file_path=#{file['path']}", :action => :download %>
            <%= link_to 'delete', dropbox_delete_file_path(@project)+"?file_path=#{file['path']}", :action => :delete_file %>
          </li>
  	    <% end %>      
    </ul>
  </div>
<% end %>