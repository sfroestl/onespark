<%= provide(:title, 'Dropbox') %>

<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->

<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Dropbox</h3>
  </div>

  <div class="scroll-pane jspScrollable tools">
    
    <%= link_to content_tag('div', 'Add Folder', class: "tool add inactive"), "" %>

    <%= link_to content_tag('div', '/', class: "tool inactive"), ""%>
    
    <%= render :partial => 'tools/dropbox/dropbox_sidebar', :collection => @folders, as: :folder %>
  </div>
</div>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div id="dropbox_content" class="content">
  <div id = "contentHead" class="head">
    <%= render :partial => 'tools/dropbox/dropbox_head', :locals => { :path => 'Link a Dropbox Folder'} %>
  </div>


  <div class="sidebar3_content">  <!-- scroll-pane jspScrollable -->
      <div class="tool element" id="authorize">
        <div>
          <%= link_to 'Request DropBox authorisation', user_dropbox_auth_path + "?project_id=#{@project.id}", class: "cancelButton", disable_with: "Loading DropBox authorisation..." %>
        </div>

      </div>
    
  </div>
</div>