<%= provide(:title, 'Dropbox') %>
<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Dropbox</h3>
  </div>

  <div class="scroll-pane jspScrollable tools">
    
    <%= link_to project_dropbox_auth_path(@project) do %>
      <div class="tool add" >Add Dropbox Account</div>
    <% end %>

    <%= link_to project_dropbox_path(@project) do %>
      <div class="tool active">/</div>
    <% end %>

    <% for folder in @folders %>
      <%= link_to "#{project_dropbox_path(@project)}" do %>
        <div class="tool"><%= folder['path'] %></div> 
      <% end %>
    <% end %>
      
  </div>
</div>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
  <div id = "contentHead" class="head">
    <h3><a href="#add" class="tk-ff-meta-serif-web-pro">Folder</a></h3>
  </div>

  <div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->
      <div class="task tool" id="add">
        <p>
          <%= form_tag({:action => :upload}, :multipart => true) do %>
            Add File <%= file_field_tag 'file' %><%= submit_tag 'upload' %>
          <% end %></p>
      </div>

    <div class="task">
      <h1>Your account info</h2>
      <p><%= @account_info['display_name'] %> | <%= @account_info['email'] %> </p>
      
      <p>Space used overall: <%= number_to_human_size @account_info['quota_info']['normal'] %> of <%= number_to_human_size @account_info['quota_info']['quota'] %></p>
      <p>Space used for shared folders: <%= number_to_human_size @account_info['quota_info']['shared'] %></p>
      
      <h2>Overview</h2>
      <p>You have <%= pluralize(@folders.size, 'folder')%></p>
      <p>You have <%= pluralize(@files.size, 'files')%></p>
    </div>
    
  </div>
</div>