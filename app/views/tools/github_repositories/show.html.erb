<%= provide(:title, 'Github') %>
<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Github</h3>
  </div>

  <div class="scroll-pane jspScrollable tools">
    <%= render partial: "sidebar", locals: { active: 'repository'} %>
  </div>
</div>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
  <div id = "contentHead" class="head">
    <h3><a href="" class="tk-ff-meta-serif-web-pro"><%= @github_repository['name'] %></a></h3>
  </div>

  <div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->

    <div class="seperator">Repository overview</div>
    <div class="element">            
      <div class="element_description">          
        <dl>
          <dt>Description</dt>
          <dd><%= @repo_data.description %></dd>
        </dl>
        <dl>
          <dt>Owner</dt>
          <dd><%= @repo_data.owner['login'] %></dd>
        </dl>
        <dl>
          <dt>Last push at</dt>
          <dd><%= format_date_long(@repo_data.pushed_at.to_datetime + 2.hours) %></dd>
        </dl>

        <dl>
          <dt>Created at</dt>
          <dd><%= format_date_short @repo_data.created_at %></dd>
        </dl>
        <dl>
          <dt>Size</dt>
          <dd><%= number_to_human_size @repo_data.size %></dd>
        </dl>
        <dl>
          <dt>Watcher</dt>
          <dd><%= pluralize(@repo_data.watchers, 'Watcher') %></dd>
        </dl>
      </div>
    </div>


      <% unless @repo_events.empty? %>
        <div class="seperator">Recent events</div>
        <%= render :partial => 'tools/github_repositories/event', :collection => @repo_events %>  
      <% end %>
</div>