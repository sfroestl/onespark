<%= provide(:title, "#{@github_repository['name']} - Issues") %>
<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Github</h3>
  </div>

  <div class="scroll-pane jspScrollable tools">
    <%= render partial: "sidebar", locals: { active: 'issues'} %>
  </div>
</div>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
  <div id = "contentHead" class="head">
    <h3><a href="" class="tk-ff-meta-serif-web-pro"><%= @github_repository['name'] %> - Issues</a></h3>
  </div>

  <div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->
    <div class="task tool element" id="add">
      <%= render "form_issue" %>
    </div>
      <div class="seperator">Repository issues</div>
    
      <%= render :partial => 'issue', :collection => @repo_issues, as: :repo_issue %>
  </div>
</div>