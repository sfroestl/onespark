<%= provide(:title, "#{@github_repository['name']} - Issues") %>
<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Github</h3>
  </div>

  <div class="scroll-pane jspScrollable tools">
    <%= render "sidebar" %>
  </div>
</div>


<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
  <div id = "contentHead" class="head">
    <h3><a href="#add" class="tk-ff-meta-serif-web-pro"><%= @github_repository['name'] %> - Issues</a></h3>
  </div>

  <div class="sidebar3_content">  <!-- scroll-pane jspScrollable -->
    <div class="task tool element" id="add">
      <%= render "form_issue" %>
    </div>

    <div class="task">
      <%= render :partial => 'issue', :collection => @repo_issues, as: :repo_issue %>
  </div>
</div>