<%= provide(:title, @topic.title) %>

<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Dialogs</h3>
  </div>

    <div class="scroll-pane jspScrollable tools">    
       <%= render "sidebar" %>
  </div>
</div>

<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
	<div id = "contentHead" class="head">
		<h3><a href="#add" class="tk-ff-meta-serif-web-pro"><%= @topic.title %></a></h3>
	</div>

	<div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->

		
			<div class="task tool element" id="add">
				<%= render :partial => "postings/form", :locals => { :topic => @topic } %>
			</div>	
		


			<% if @topic.postings %>
				<%= render :partial => "shared/posting", :collection => @topic.postings %>
			<% end %>
					

		
	</div>
</div>