<%= provide(:title, @topic.title) %>

<!-- ///////////////////////////////////SIDEBAR2//////////////////////////////////////////-->
<div class="sidebar sidebar2">
  <div id = "toolHead" class="head">
    <h3>Dialogs</h3>
  </div>

    <div class="scroll-pane jspScrollable tools">    
       <%= render "sidebar" %>
  </div>
</div>

<!-- ///////////////////////////////////CONTENT//////////////////////////////////////////-->
<div class="content">
	<div id = "contentHead" class="head">
		<h3><a href="#add" class="tk-ff-meta-serif-web-pro"><%= @topic.title %></a></h3>
	</div>

	<div class="scroll-pane jspScrollable">  <!-- scroll-pane jspScrollable -->

		
			<div class="task tool element" id="add">
				<%= render :partial => "shared/comment_form", :locals => { :commentable => @topic } %>
			</div>	
		
			<div class="element">
				<h1>
					<%= @topic.title %>
				</h1>
				<ul>
					<li>desc: <%= @topic.desc %></li>
					<li>created by: <%= @topic.creator.username %></li>					
					<li>at: <%= format_date_long @topic.created_at %></li>
				</ul>
				<%= link_to "Edit", edit_project_topic_path(@project, @topic) %>
  				<%= link_to "Delete", project_topic_path(@project, @topic), :confirm => 'Are you sure?', :method => :delete %> 
				<%= link_to 'Archive', '#' %>

				<p>
					<% unless @topic.comments %>
					  <p>No comments yet. Write your statement!</p>
					
					<% else %>					
					  <h2><%= pluralize( @topic.comments.size, 'comment' ) %></h2>
					  
					  <%= render :partial => "shared/comment", :collection => @topic.comments %>

					<% end %>
				</p>
					
			
			</div>

		
	</div>
</div>