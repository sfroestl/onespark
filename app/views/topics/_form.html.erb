<% @topic ||= Topic.new %>

<%= form_for [@project, @topic] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <fieldset>
    <%= f.label :title,  'Title' %>
    <%= f.text_field :title, placeholder:"What needs discussion?", :autofocus => "autofocus" %>
  </fieldset>
  
  <fieldset>
    <%= f.label :desc,  'Description' %>
    <%= f.text_area :desc, placeholder: "Wish to add further details?" %>
  </fieldset>
  
  <fieldset>
    <%= f.label  'Finish' %>
    <%= f.submit :tabindex => 6%>
    <% if params[:action].eql? 'edit' or params[:action].eql? 'update' %>
        <%= link_to 'Cancel', project_topic_path(@project, @topic), class: "cancelButton" %>
      <% else %>
        <%= link_to 'Cancel', project_topics_path(@project), class: "cancelButton" %>
      <% end %>
  <fieldset>
<% end %>
