<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="listed_elem">
    <fieldset>
      <%= f.label :title,  'Create a new Project' %>
      <%= f.text_field :title, placeholder:"What's your idea's title?", :autofocus => true, :tabindex => 2 %>
    </fieldset>
    <div  class="details">
      <fieldset>
        <%= f.label :due_date,  'Due Date' %>
        <%= f.text_field :due_date, placeholder:"When is it due?", :tabindex => 3 %>
      </fieldset>
      <fieldset>
        <%= f.label :desc,  'Description' %>
        <%= f.text_area :desc, placeholder: "Wish to add further details?", :tabindex => 5 %>
      </fieldset>

      <fieldset>
        <%= f.label  'Finish' %>
        <%= f.submit :tabindex => 6%>
      <% if params[:action].eql? 'edit' or params[:action].eql? 'update' %>
        <%= link_to 'Cancel', @project, class: "cancelButton" %>
      <% else %>
        <a class="cancelButton">Cancel</a>
      <% end %>
      </fieldset>
    </div>
  </div>
<% end %>