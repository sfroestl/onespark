<%= form_for [@project, @milestone] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :title %>
	<%= f.text_field :title, :autofocus => "autofocus"%>

	<%= f.label :goal %>
	<%= f.text_field :goal%>
	
	<%= f.label :desc %>
	<%= f.text_area :desc %>

	<%= f.label :due_date %>
	<%= f.text_field :due_date %>

	<%= f.submit %>
<% end %>
