<div class="project_actions pull-right">
	<%= link_to "Edit project", edit_project_path(@project) %>
	<%= link_to "Delete project?", @project, method: :delete, confirm: "Delete project: " + @project.title + " with all tickets?"  %>
</div>
<div class= "project_headline">
	<h1><%= link_to @project.title, project_path(@project)  %></h1> 
	<% if @project.due_date %>
		<span class="due_date bubble"><%= @project.due_date.strftime('%d.%m.%Y')%></span>
	<% end %>
	<p><%= @project.desc %></p>
</div>
<hr/>
	