<% if (params[:action].eql? 'new' or params[:action].eql? 'create') %>
<% bool = false %>
<% else bool = true %>
<% end %>


<%= form_for @user, :remote => bool do |f| %>

 <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :username, :autofocus => "autofocus", :placeholder => 'Pick an username', :class => "login_text"  %>

  <%= f.text_field :email, :placeholder => 'Your email', :class => "login_text"  %>

  <%= f.password_field :password, :placeholder => 'Password', :class => "login_text"  %>

  <%= f.password_field :password_confirmation, :placeholder => 'Confirm password', :class => "login_text"  %>

	<% if params[:action].eql? "new" or params[:action].eql? "create" %>
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

	<% elsif params[:action].eql? "edit" or params[:action].eql? "update" %>
		<%= f.submit %>
		<%= link_to 'cancel', current_user, remote: true, class: "cancel_button" %>
	<% else %>
		<div class="two_edit_buttons">
			<%= submit_tag("Cancel", { :name => 'reset', :id => 'reset_button', :type => "reset", :class => "btn btn-large" })%>
			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>

			
<%= debug params if Rails.env.development? %>
		</div>
	<% end %>
  <% end %>