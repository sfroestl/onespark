<%= link_to  'Your projects', projects_path %>

<% provide(:title, @user.username) %>

<% if @user == current_user %>
  <h1>Settings of <%= @user.username %></h1>
<% end %>

    	<h2>Account details</h2>
			<h5><%= @user.email %></h5> <br/>
			Member since: <%= @user.created_at.strftime('%d.%m.%Y') %><br/>
			<p>Account type: Free user</p>
			<p><%= link_to "Edit account", edit_user_path(@user.username)%></p>
		</div>

			<h2>Linked tools</h2>
			<ul>

			<!-- ////// Github column ////// -->
				<li>
					<h2>GitHub</h2>
					<% if @github_account.nil? %>
						<p><%= link_to 'Add GitHub account', "/git/auth"%></p>
					<% else %>
						<p>Github account is linked!</p>
						<p><%= link_to "View GitHub account repositories", user_github_repos_path(current_user) %> </p>
						<p><%= link_to 'Remove GitHub account', "/git/unlink", confirm: "Be careful: Only your OneSpark sided authorisation will be deletet. Be sure to remove OneSpark in \"Authorized applications\" on GitHub.com"%>
						</p>
					<% end %>
				</li>
					

			<!-- ////// DropBox column ////// -->
			<li>
				<p><strong>DropBox</strong></p>
				<% if @db_client %>
					<p>Dropbox account is linked!</p>
					<p><%= link_to 'View DrobBox account details', user_dropbox_account_path(current_user) %></p>
					<p><%= link_to 'Unlink DrobBox account', '/dropbox/unlink' %></p>
					
				<% else %>
					<p><%= link_to 'Add DrobBox account', user_dropbox_auth_path %></p>
				<% end %>
				
			</li>
		</ul>

		</div>
	</div>
	
	