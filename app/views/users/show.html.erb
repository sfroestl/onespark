<% provide(:title, @user.username) %>

<% if @user == current_user %>
  <h1>Settings of <%= @user.username %></h1>
<% end %>

    	<h2>Account details</h2>
			<h5><%= @user.email %></h5> <br/>
			Member since: <%= @user.created_at.strftime('%d.%m.%Y') %><br/>
			<p>Account type: Free user</p>
			<p><%= link_to "Edit account", edit_user_path(@user.username)%></p>
		</div>

			<h2>Linked tools</h2>
			<ul>

			<!-- ////// Github column ////// -->
				<li>
					<h2>GitHub</h2>
					<% if @github_account.nil? %>
						<p><%= link_to 'Add GitHub account', "/git/auth"%></p>
					<% else %>
						<p><%= link_to "View your GitHub repositories", user_github_repositories_path(@user) %> </p>
						<p><%= link_to 'Remove GitHub account', "/git/unlink", confirm: "Be careful: Only your OneSpark sided authorisation will be deletet. Be sure to remove OneSpark in \"Authorized applications\" on GitHub.com"%>
						</p>
					<% end %>
				</li>
					

			<!-- ////// DropBox column ////// -->
				<li>
					<h2>DropBox</h2>
					<% if @dropbox_account.nil? %>
						<p><%= link_to 'Add DropBox account', user_dropbox_auth_path(@user) %></p>
					<% else %>
						<p><%= link_to "View your GitHub repositories", user_github_repositories_path(@user) %> </p>
						<p><%= link_to 'Remove GitHub account', "/git/unlink", confirm: "Be careful: Only your OneSpark sided authorisation will be deletet. Be sure to remove OneSpark in \"Authorized applications\" on GitHub.com"%>
						</p>
					<% end %>
				</li>
				</ul>

		</div>
	</div>
	
	