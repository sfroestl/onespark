<% provide(:title, "#{@user.username}") %>

<% if @user == current_user %>
  <h1>Welcome <%= @user.username %></h1>
    <div class="pull-right button" style = "margin-right:200px">
        <%= link_to "Edit", edit_profile_path(@user.username)%>
    </div>
<% else %>
  <h1><%= @user.username %></h1>
<% end %>



  <hr class="soften">
  <div class="row-fluid offset3">
    
    <div class="span4">
      <div class = "profile-avatar">
      <%= image_tag "avatars/avatar.png", size: "100x100" %>
    </div>
    <br/>
      <h2>Details</h2>
      <p>
        <strong>Forename:</strong>
        <%= @profile.forename %>
      </p>
      <p>
        <strong>Surname:</strong>
        <%= @profile.surname %>
      </p>
      <p>
        <strong>City:</strong>
        <%= @profile.city %>
      </p>
      <p>
        <strong>About:</strong>
        <%= @profile.about %>
      </p>

      
      <br/>
    </div>
    <div class="span4">
      <h2>Friends</h2>
      <ul>
        <% for friend in @friends %>
         <li>
            <%= friend.username %> 
            <% if @user == current_user %>
            | <%=link_to "Remove friendship", "/friendship/remove/#{friend.id}", method: "post"%> 
            <% end %>
        </li>
        <%end%>
      </ul>
      <br/>
      <% if @user == current_user %>
      <h2>Pending friendships </h2>
      <ul>
        <% for friend in @pending_friends %>
          <li>
            <%= friend.username %> |    
            <%=link_to "Cancel", "/friendship/remove/#{friend.id}", method: "post"%>
          </li>
        <%end%>
      </ul>
      <br/>

      <h2>Requested friendships </h2>
      <ul>
        <% for friend in @requested_friends %>
          <li>
            <%= friend.username %> | 
            <%=link_to "Accept", "/friendship/accept/#{friend.id}", method: "post"%> |
            <%=link_to "Deny", "/friendship/remove/#{friend.id}", method: "post"%>
          </li>
        <%end%>
      </ul>
      <% end %>
    </div>
  </div>