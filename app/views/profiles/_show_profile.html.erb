

<div class="overlay">
  <div id="overlay_content">

    <% if @user == current_user %>
      <h1>Hi, <%= @user.username %></h1>    

    <% else %>
      <h1><%= @user.username %></h1>
    <% end %>



  <div class="user">
    
     <%= image_tag "avatars/avatar.png", size: "100x100" %>
<%= link_to 'edit', edit_profile_path(@user.username), remote:true if @user == current_user%>
 
    <dl>
      <dt>Forename</dt>
      <dd><%= @profile.forename %></dd>
      <dt>Surname</dt>
      <dd><%= @profile.surname %></dd>
      <dt>City</dt>
      <dd><%= @profile.city %></dd>
      <dt>About</dt>
      <dd><%= @profile.about %></dd>
    </dl>
  </div>

  <div class="friends">
  <h2>Friends</h2>
    <ul>
      <% for friend in @friends %>
        <li>
          <div class ="friendElem">
          <%= image_tag "avatars/avatar.png", size: "30x30" %>
          <%= friend.username %> 

          <% if @user == current_user %>
          | <%=link_to "Remove friendship", "/friendship/remove/#{friend.id}", method: "post"%> 
          <% end %>
          </div>
        </li>
      <%end%>
    </ul>
  </div>
  
    <% if @user == current_user %>
      <div class="friends">

        <h2>Pending</h2>
          <ul>
            <% for friend in @pending_friends %>
              <li>
                <div class="friendElem">
                <%= image_tag "avatars/avatar.png", size: "30x30" %>
                <%= friend.username %> |    
                <%=link_to "Cancel", "/friendship/remove/#{friend.id}", method: "post"%>
                </div>
              </li>
            <%end%>
          </ul>
        </div>
      <div class="friends">
        <h2>Requested</h2>
        <ul>
          <% for friend in @requested_friends %>
            <li>
              <div class="friendElem">
              <%= image_tag "avatars/avatar.png", size: "30x30" %>
              <%= friend.username %> | 
              <%=link_to "Accept", "/friendship/accept/#{friend.id}", method: "post"%> |
              <%=link_to "Deny", "/friendship/remove/#{friend.id}", method: "post"%>
              </div>
            </li>
          <%end%>
        </ul>
      </div>
    <% end %>

  </div>


  <div class="buttons">
    <%= link_to 'profile', profile_path(@user.username), remote:true %> 
    <%= link_to 'settings', current_user, remote:true if @user == current_user %>     
    <a class="closeButton">close</a>
  </div>
</div>

<div class="darkener">
</div>
